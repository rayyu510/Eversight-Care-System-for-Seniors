{
  "name": "eversight-care-desktop",
  "version": "1.0.0",
  "description": "Eversight Care Desktop Application",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "webpack serve --config webpack.renderer.config.js --mode development --open",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:api\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "dev:api": "npx tsx src/api/server.ts",
    "build": "npm run build:main && npm run build:renderer && npm run build:api",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:monitoring": "webpack --config webpack.renderer.config.js --mode production --env section=monitoring",
    "build:api": "echo 'API build placeholder'",
    "electron:dev": "npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:guardian": "jest tests/database/guardian-simple.test.ts",
    "test:verbose": "VERBOSE_TESTS=true jest --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "start:electron": "npm run build && electron dist/main/main.js"
  },
  "keywords": [
    "electron",
    "healthcare",
    "senior-care",
    "desktop-app"
  ],
  "author": "Eversight Care Systems",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.1",
    "electron-store": "^8.1.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.2",
    "sqlite3": "^5.1.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.2.0",
    "buffer": "^6.0.3",
    "concurrently": "^7.6.0",
    "css-loader": "^6.11.0",
    "electron": "^37.2.4",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "process": "^0.11.10",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.4.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "resolutions": {
    "@types/react-router": "5.1.20",
    "@types/react-router-dom": "5.3.3"
  },
  "build": {
    "appId": "com.eversight.care.desktop",
    "productName": "Eversight Care Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}